<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@color/transparent_green">

        <TextView
            android:id="@+id/tvEditProfile"
            style="@style/EditTextDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="30"
            android:gravity="center"
            android:text="@string/edit_profile"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditProfile">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvUserName"
                    style="@style/EditTextDefault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center"
                    android:text="@string/label_user_name" />

                <EditText
                    android:id="@+id/editUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical|center"
                    android:hint="@string/user_name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:textColor="@color/textColour" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/EditTextDefault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center"
                    android:text="@string/label_email_address" />

                <EditText
                    android:id="@+id/editEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical|center"
                    android:hint="@string/email_address"
                    android:importantForAutofill="no"
                    android:inputType="textWebEmailAddress"
                    android:textColor="@color/textColour" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvPassword"
                    style="@style/EditTextDefault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center"
                    android:text="@string/label_password" />

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical|center"
                    android:hint="@string/password"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:textColor="@color/textColour" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvConfirmPassword"
                    style="@style/EditTextDefault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center"
                    android:text="@string/label_confirm_password" />

                <EditText
                    android:id="@+id/editConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical|center"
                    android:hint="@string/confirm_password"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:textColor="@color/textColour" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvLoginHint"
                    style="@style/EditTextDefault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center"
                    android:text="@string/loginHint" />

                <EditText
                    android:id="@+id/editLoginHint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical|center"
                    android:hint="@string/showHint"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:textColor="@color/textColour" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="300dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tableLayout4">

            <Button
                android:id="@+id/btnEditProfile"
                style="@style/ButtonStyleBlackOnYellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/edit_profile"
                android:textStyle="normal|bold"
                tools:ignore="RelativeOverlap" />

            <Button
                android:id="@+id/btnDeleteUser"
                style="@style/ButtonStyleBlackOnYellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/deleteAccount"
                android:textStyle="normal|bold"
                tools:ignore="RelativeOverlap" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibInformation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="335dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/info"
            android:contentDescription="@string/Instructions"
            app:layout_constraintBottom_toTopOf="@+id/tvEditProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProfileInstruction"
            style="@style/InstructionText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="117dp"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/bubble_bottom"
            android:gravity="top"
            android:padding="20dp"
            android:text="@string/HomeSwipeInstructions"
            android:translationZ="@dimen/cardview_default_elevation"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            tools:ignore="PrivateResource" />

        <RelativeLayout
            android:layout_width="53dp"
            android:layout_height="73dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="300dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <ImageButton
                android:id="@+id/btnAbout"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:background="@drawable/emblem_round"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="631dp"
                android:contentDescription="@string/aboutImage" />

            <TextView
                android:id="@+id/textView2"
                style="@style/EditTextDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="@string/about" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>