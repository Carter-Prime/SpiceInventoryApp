<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBarcodeAdapter"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/barcodeAdaptor" />

        <TextView
            android:id="@+id/RVBarcode"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/barcode" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSpiceNameAdapter"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/spice_name" />

        <TextView
            android:id="@+id/RVSpiceName"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/spice_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBarcodeAdapter4"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/stockAdaptor" />

        <TextView
            android:id="@+id/RVStock"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/stock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvContainerAdapter"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/container_type_adaptor" />

        <TextView
            android:id="@+id/RVContainerType"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/RVcontainertype" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBrandAdaptor"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/brandAdaptor" />

        <TextView
            android:id="@+id/RVBrand"
            style="@style/EditTextDefaultAdaptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/RVbrand" />
    </LinearLayout>


</LinearLayout>

