<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SpiceItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_background"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/RVSpiceName"
            style="@style/SpiceAdaptor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="22"
            android:gravity="center"
            android:text="@string/spiceNameLabel" />

        <TextView
            android:id="@+id/RVBrand"
            style="@style/SpiceAdaptor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="22"
            android:drawableStart="@color/yellowText"
            android:gravity="center"
            android:text="@string/brand" />

        <TextView
            android:id="@+id/RVContainerType"
            style="@style/SpiceAdaptor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="28"
            android:drawableStart="@color/yellowText"
            android:gravity="center"
            android:text="@string/container" />

        <TextView
            android:id="@+id/RVStock"
            style="@style/SpiceAdaptor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="28"
            android:gravity="center"
            android:text="@string/stockLabel" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

