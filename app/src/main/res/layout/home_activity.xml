<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spicesinventory.activites.HomeActivity">

    <Button
        android:id="@+id/ShoppingList"
        android:layout_width="105dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="16dp"
        android:onClick="ShoppingPage"
        android:text="Shopping List"
        android:textSize="14dp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewSpices" />

    <TextView
        android:id="@+id/Barcode_Number"
        android:layout_width="115dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:text="Barcode Number: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <TextView
        android:id="@+id/Spice_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Spice Name: "
        app:layout_constraintBaseline_toBaselineOf="@+id/editSpiceName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Barcode_Number"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/StockNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Current Stock: "
        app:layout_constraintBaseline_toBaselineOf="@+id/editStock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/updater"
        android:layout_width="104dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:onClick="updateSpice"
        android:text="update Spice"
        android:textSize="14dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Scan" />

    <Button
        android:id="@+id/addSpice"
        android:layout_width="111dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:onClick="addSpice"
        android:text="Add Spice "
        android:textSize="14dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/Scan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/deleteSpices"
        app:layout_constraintTop_toBottomOf="@+id/editStock" />

    <Button
        android:id="@+id/Scan"
        android:layout_width="106dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:onClick="scanner"
        android:text="Scan Barcode"
        android:textSize="14dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editStock" />

    <EditText
        android:id="@+id/editBarcode"
        android:layout_width="248dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint=""
        android:inputType="textPersonName"
        android:textSize="14dp"
        android:textStyle="bold|italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/Barcode_Number"
        app:layout_constraintEnd_toEndOf="@+id/editSpiceName" />

    <Button
        android:id="@+id/viewSpices"
        android:layout_width="191dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="InventoryPage"
        android:text="View Inventory"
        android:textSize="14dp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editSpiceName"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint=""
        android:inputType="textPersonName"
        android:textSize="14dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/editStock"
        app:layout_constraintTop_toBottomOf="@+id/editBarcode" />

    <EditText
        android:id="@+id/editStock"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint=""
        android:inputType="textPersonName"
        android:textSize="14dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/Scan"
        app:layout_constraintTop_toBottomOf="@+id/editSpiceName" />

    <EditText
        android:id="@+id/updateStock"
        android:layout_width="118dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint=""
        android:inputType="textPersonName"
        android:textSize="12dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/updater"
        app:layout_constraintTop_toBottomOf="@+id/addSpice" />

    <Button
        android:id="@+id/deleteSpices"
        android:layout_width="120dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:onClick="deleteSpice"
        android:text="delete Spice"
        android:textStyle="normal|bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StockNumber"
        tools:ignore="RelativeOverlap" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="117dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Update Stock"
        app:layout_constraintBottom_toBottomOf="@+id/updateStock"
        app:layout_constraintEnd_toStartOf="@+id/updateStock"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteSpices"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>