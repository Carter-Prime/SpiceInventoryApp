<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_white_background"
    tools:context="com.example.spicesinventory.activites.ScanActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="341dp"
        android:layout_height="71dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="172dp"
        app:layout_constraintBottom_toTopOf="@+id/tvYouHave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Barcode_Number"
                style="@style/EditTextDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:text="@string/barcode_number" />

            <TextView
                android:id="@+id/tvBarcode"
                style="@style/EditTextDefault"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center_vertical|center"
                android:importantForAutofill="no" />
        </TableRow>

        <TableRow
            android:layout_width="343dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Spice_Name"
                style="@style/EditTextDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:text="@string/spice_name" />

            <TextView
                android:id="@+id/tvSpiceNameScanned"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                style="@style/EditTextDefault"
                android:gravity="center_vertical|center"
                android:importantForAutofill="no" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/StockNumber"
                style="@style/EditTextDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:text="@string/current_stock" />

            <TextView
                android:id="@+id/tvStockFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_vertical|center"
                style="@style/EditTextDefault"
                android:importantForAutofill="no" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tvYouHave"
        style="@style/EditTextDefault"
        android:layout_width="248dp"
        android:layout_height="67dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="328dp"
        android:gravity="center_vertical|center"
        android:text="@string/you_have_2_chilli_spices_in_your_cupboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>