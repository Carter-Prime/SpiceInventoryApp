<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextDefault">
        <item name="autoSizeMinTextSize">6sp</item>
       <item name="android:textColorHint">@color/textColourTransparent</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle"> bold|italic</item>
        <item name="android:textColor">@color/yellowText</item>
        <item name="android:shadowColor">#010203</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
    </style>

    <style name="InstructionText">
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/textColourTransparent</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle"> bold|italic</item>
        <item name="android:textColor">@color/yellowText</item>
        <item name="android:shadowColor">#010203</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
    </style>

    <style name="ButtonStyleBlackOnYellow">
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle"> bold|italic</item>
        <item name="android:textColor">#010203</item>
        <item name="android:shadowColor">@color/textColour</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
        <item name="android:background">@color/yellowText</item>
    </style>

    <style name="ButtonStyleStartupActivity">
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle"> bold|italic</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="android:shadowColor">#010203</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
        <item name="android:background">@color/textBackgroundTransparent</item>
    </style>

    <style name="SpiceAdaptor">
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle"> bold|italic</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="android:shadowColor">#010203</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
    </style>

    <style name="ShoppingAdaptor">
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textStyle"> bold|italic</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="android:shadowColor">#010203</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
    </style>

</resources>






